<table>
  <thead>
  <tr>
    <th>File</th>
    <th>Uploader</th>
  </tr>
  </thead>
  <tbody>
  <% for file in @page.files %>
      <tr>
        <% if file.respond_to? :user %>
            <td><%= link_to file.filename, file.filename  %></td>
            <td><%= h file.user.full_name %></td>
        <% else %>
            <% if File.file?(file) %>
                <td><%= link_to file, file %></td>
                <td>unknown</td>
            <% end %>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

